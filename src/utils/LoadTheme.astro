<script is:inline>
    function setDarkMode(doc = document) {
        doc.documentElement.classList.toggle("dark", localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches));
    }
    setDarkMode(document);

    document.addEventListener("astro:before-swap", (ev) => {
        setDarkMode(ev.newDocument);
    });
</script>
