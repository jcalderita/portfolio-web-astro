---
interface Props {
    info: string;
    dataInfo?: boolean;
}

const { info, dataInfo = false } = Astro.props;
---

<span class="text-gray-800 dark:text-gray-300 rounded-full px-3 py-2 text-xs font-bold bg-orange-100 dark:bg-orange-900" {...dataInfo && { "data-info": info }}>
    {info}
</span>
