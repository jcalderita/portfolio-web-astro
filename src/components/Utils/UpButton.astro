---
interface Props {
    language: string;
}
const { language } = Astro.props;
const ariaLabel = language === "es" ? "Volver arriba" : "Back to top";
---

<button
    type="button"
    aria-label={ariaLabel}
    class="fixed bottom-24 right-1/2 translate-x-1/2 z-50 p-1 rounded-full bg-orange-600 text-white shadow-lg hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-400 transition lg:right-[calc(50vw-50%+calc((100vw-80rem)/2)+7rem)] lg:translate-x-0 cursor-pointer"
    onclick="window.scrollTo({top: 0})"
>
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
    </svg>
</button>
