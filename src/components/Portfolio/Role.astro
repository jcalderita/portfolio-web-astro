---
interface Props {
    role: string;
    introduction: string;
}

const { role, introduction } = Astro.props;
---

<div class="my-8">
    <h1 class="text-center text-3xl md:text-4xl font-bold text-orange-600">{role}</h1>
    <hr class="border-t border-orange-700 my-4 mx-auto" />
    <p class="mt-2 text-base md:text-lg text-gray-800 dark:text-gray-300">{introduction}</p>
</div>
