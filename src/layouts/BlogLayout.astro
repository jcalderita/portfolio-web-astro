---
import "../styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import UpButton from "@components/Utils/UpButton.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
    language: string;
    title?: string; // Por si quieres sobreescribir desde la página
    description?: string;
}

const { language, title = "Blog", description } = Astro.props;

function makeTitle(es: string, en: string) {
    return language === "es" ? es : en;
}

const jobTitle = makeTitle("Trabajos", "Jobs");
const educationTitle = makeTitle("Educación", "Education");
const projectTitle = makeTitle("Proyectos", "Projects");
const blogTitle = makeTitle("Blog", "Blog");
---

<!doctype html>
<html lang={language}>
    <head>
        <script is:inline>
            function setDarkMode(doc = document) {
                doc.documentElement.classList.toggle(
                    "dark",
                    localStorage.theme === "dark" || (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches),
                );
            }
            setDarkMode(document);

            document.addEventListener("astro:before-swap", (ev) => {
                setDarkMode(ev.newDocument);
            });
        </script>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        {description && <meta name="description" content={description} />}
        <meta name="robots" content="index, follow" />

        <ClientRouter />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="icon" href="/favicon.ico" sizes="any" />
    </head>
    <body class="bg-gray-100 dark:bg-gray-900 text-gray-800 dark:text-gray-300">
        <Header language={language} links={[jobTitle, educationTitle, projectTitle, blogTitle]} />
        <main class="mx-auto w-full max-w-screen-xl px-2 grid grid-cols-12 pb-10 my-8">
            <div class="col-start-1 col-span-12 md:col-start-1 md:col-span-12 lg:col-start-2 lg:col-span-10">
                <slot />
                <UpButton language={language} />
            </div>
        </main>
        <Footer language={language} />
    </body>
</html>
